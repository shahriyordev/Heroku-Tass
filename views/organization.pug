                       td @fat
                       td jacobt@gmail.com
                       td France
                       td Paris
                     tr
                       th(scope='row')
                         input#checkbox3.form-check-input(type='checkbox')
                         label.form-check-label(for='checkbox3')
                       td Larry
                       td the Bird
                       td @twitter
                       td larrybird@gmail.com
                       td Germany
                       td Berlin
                     tr
                       th(scope='row')
                         input#checkbox4.form-check-input(type='checkbox')
                         label.form-check-label(for='checkbox4')
                       td Paul
                       td Topolski
                       td @P_Topolski
                       td ptopolski@gmail.com
                       td Poland
                       td Warsaw
                     tr
                       th(scope='row')
                         input#checkbox5.form-check-input(type='checkbox')
                         label.form-check-label(for='checkbox5')
                       td Anna
