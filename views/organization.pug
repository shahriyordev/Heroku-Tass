extends layout

block content
    main
      .container-fluid
         section
           h2.font-weight-bold.mt-lg-5.mb-5.pb-4
             strong Organization
           // Top Table UI
           .card.p-2.mb-5
             // Grid row
             .row
               .col-lg-3.col-md-12
                 
                  select.mdb-select.colorful-select.dropdown-primary.mx-2.md-form.mt-3.md-dropdown
                   option(value='' disabled='' selected='') Bulk actions
                   option(value='1') Delate
                   option(value='2') Export
                   option(value='3') Change segment
               .col-lg-3.col-md-6
                 // Blue select
                 select.mdb-select.colorful-select.dropdown-primary.mx-2.md-form.mt-3.md-dropdown
                   option(value='' disabled='' selected='') Show only
                   option(value='1') All  (2000)
                   option(value='2') Never opened  (200)
                   option(value='3') Opened but unanswered  (1800)
                   option(value='4') Answered  (200)
                   option(value='5') Unsunscribed  (50)
                 // /Blue select
                 // Grid column
                 // Grid column
               .col-lg-3.col-md-6
                   // Blue select
                   select.mdb-select.colorful-select.dropdown-primary.mx-2.md-form.mt-3.md-dropdown
                     option(value='' disabled='' selected='') Filter segments
                     option(value='1') Contacts in no segments  (100)
                     option(value='1') Segment 1  (2000)
                     option(value='2') Segment 2  (1000)
                     option(value='3') Segment 3  (4000)
                   // /Blue select
                   // Grid column
                   // Grid column
               .col-lg-3.col-md-6
                     form.form-inline.md-form.mt-2.ml-2
                       input.form-control.mt-2(type='text' placeholder='Search' style='max-width: 150px;')
                       button.btn.btn-sm.btn-primary.ml-2.px-1
                         i.fas.fa-search

           .card.card-cascade.narrower.z-depth-1
             // Card image
             .view.view-cascade.gradient-card-header.blue-gradient.narrower.py-2.mx-4.mb-3.d-flex.justify-content-between.align-items-center
               div
                 button.btn.btn-outline-white.btn-rounded.btn-sm.px-2(type='button')
                   i.fas.fa-th-large.mt-0
                 button.btn.btn-outline-white.btn-rounded.btn-sm.px-2(type='button')
                   i.fas.fa-columns.mt-0
               a.white-text.mx-3(href='') Table name
               div
                 button.btn.btn-outline-white.btn-rounded.btn-sm.px-2(type='button')
                   i.fas.fa-pencil-alt.mt-0
                 button.btn.btn-outline-white.btn-rounded.btn-sm.px-2(type='button')
                   i.fas.fa-eraser.mt-0
                 button.btn.btn-outline-white.btn-rounded.btn-sm.px-2(type='button')
                   i.fas.fa-info-circle.mt-0
             // /Card image
             .px-4
               .table-responsive
                 // Table
                 table.table.table-hover.mb-0
                   // Table head
                   thead
                     tr
                       th
                         input#checkbox.form-check-input(type='checkbox')
                         label.form-check-label(for='checkbox')
                       th.th-lg
                         a
                           | First Name 
                           i.fas.fa-sort.ml-1
                       th.th-lg
                         a(href='')
                           | Last Name
                           i.fas.fa-sort.ml-1
                       th.th-lg
                         a(href='')
                           | Username
                           i.fas.fa-sort.ml-1
                       th.th-lg
                         a(href='')
                           | Email
                           i.fas.fa-sort.ml-1
                       th.th-lg
                         a(href='')
                           | Country
                           i.fas.fa-sort.ml-1
                       th.th-lg
                         a(href='')
                           | City
                           i.fas.fa-sort.ml-1
                   // Table head
                   // Table body
                   tbody
                     tr
                       th(scope='row')
                         input#checkbox1.form-check-input(type='checkbox')
                         label.form-check-label(for='checkbox1')
                       td Mark
                       td Otto
