                   // Table body
                   // Table
               hr.my-0
               // Bottom Table UI
               .d-flex.justify-content-between
                 // Name
                 select.mdb-select.colorful-select.dropdown-primary.mt-2
                   option(value='' disabled='') Rows number
                   option(value='1' selected='') 5 rows
                   option(value='2') 25 rows
                   option(value='3') 50 rows
                   option(value='4') 100 rows
                 // Pagination
                 nav.my-4
                   ul.pagination.pagination-circle.pg-blue.mb-0
                     // First
                     li.page-item.disabled.clearfix.d-none.d-md-block
                       a.page-link First
                     // Arrow left
                     li.page-item.disabled
                       a.page-link(aria-label='Previous')
                         span(aria-hidden='true') «
                         span.sr-only Previous
                     // Numbers
                     li.page-item.active
                       a.page-link 1
                     li.page-item
                       a.page-link 2
                     li.page-item.clearfix.d-none.d-md-inline-block
                       a.page-link 3
                     li.page-item.clearfix.d-none.d-md-inline-block
                       a.page-link 4
                     li.page-item.clearfix.d-none.d-md-inline-block
                       a.page-link 5
